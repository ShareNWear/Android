<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/baseView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivEvent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                app:layout_constraintDimensionRatio="412:187"
                app:layout_constraintHeight_percent="0.3"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/backgrounds/scenic" />

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="@dimen/margin_normal"
                android:background="@drawable/tint_image"
                android:clickable="true"
                android:contentDescription="@null"
                android:focusable="true"
                android:padding="5dp"
                android:src="@drawable/ic_back_arrow_white"
                app:layout_constraintStart_toStartOf="@id/ivEvent"
                app:layout_constraintTop_toTopOf="@id/ivEvent" />

            <TextView
                android:id="@+id/tvEventName"
                style="@style/BaseTextViewStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:elevation="1dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@id/ivEvent"
                app:layout_constraintEnd_toEndOf="@id/ivEvent"
                app:layout_constraintStart_toStartOf="@id/ivEvent"
                tools:text="Event name" />

            <View
                android:id="@+id/tint"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/shape_dark_gradient"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/ivEvent" />

            <TextView
                android:id="@+id/tvDate"
                style="@style/BaseTextViewStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="@dimen/margin_average"
                android:layout_marginEnd="@dimen/margin_average"
                android:lines="1"
                android:textColor="@color/colorGrayText"
                android:textSize="13sp"
                app:layout_constraintEnd_toStartOf="@id/btnMyOutfit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivEvent"
                tools:text="Mon DD * " />

            <TextView
                android:id="@+id/tvLocation"
                style="@style/BaseTextViewStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="@dimen/margin_average"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/colorGrayText"
                android:textSize="13sp"
                app:layout_constraintEnd_toStartOf="@id/btnMyOutfit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDate"
                tools:text="Event location" />

            <ImageView
                android:id="@+id/btnMyOutfit"
                style="@style/BaseButtonStyle"
                android:layout_width="108dp"
                android:layout_height="40dp"
                android:layout_margin="@dimen/margin_average"
                android:background="@color/colorAppDark"
                android:contentDescription="@null"
                android:padding="9dp"
                android:src="@drawable/text_my_outfit"
                android:textColor="@color/colorWhite"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivEvent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvOutfit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="58dp"
                android:overScrollMode="never"
                android:padding="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnMyOutfit" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvError"
        style="@style/BaseTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="@dimen/margin_super_large"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        android:visibility="gone"
        tools:text="@string/event_not_found" />

    <include
        android:id="@+id/loadView"
        layout="@layout/layout_loading"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>
