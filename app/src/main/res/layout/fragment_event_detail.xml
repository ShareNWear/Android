<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivEvent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="26dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/tvDate"
        style="@style/BaseTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="@dimen/margin_average"
        android:layout_marginEnd="@dimen/margin_average"
        android:lines="1"
        android:textColor="@color/colorGrayText"
        android:textSize="13sp"
        app:layout_constraintEnd_toStartOf="@id/btnMyOutfit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivEvent"
        tools:text="Mon DD * " />

    <TextView
        android:id="@+id/tvLocation"
        style="@style/BaseTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="@dimen/margin_average"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/colorGrayText"
        android:textSize="13sp"
        app:layout_constraintEnd_toStartOf="@id/btnMyOutfit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDate"
        tools:text="Event location" />

    <TextView
        android:id="@+id/btnMyOutfit"
        style="@style/BaseButtonStyle"
        android:layout_width="108dp"
        android:layout_height="40dp"
        android:layout_margin="@dimen/margin_average"
        android:text="@string/my_outfit"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivEvent" />


    <include
        android:id="@+id/loadView"
        layout="@layout/layout_loading"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>